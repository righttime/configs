syntax on
set termguicolors
colorscheme monokai

"Indention Option"
set autoindent
set expandtab
set shiftround
set smarttab
set tabstop=4
set shiftwidth=4

"Search Option"
set hlsearch
set ignorecase
set incsearch
set smartcase
set showmatch

"Performance Option"
set complete-=5
set lazyredraw

"Text Rendering Option"
set display+=lastline
set linebreak
set scrolloff=1
set sidescrolloff=5
set wrap
set fileencodings=utf8,euc-kr

"UI Option"
set laststatus=2
set ruler
set title
set wildmenu
set nu
set mouse=a
set cursorline
set noerrorbells
set visualbell
set cmdheight=2

"Miscellaneous Option"
set autoread
set backspace=indent,eol,start
set confirm
set hidden
set history=1000
set autowrite
set shell=/bin/bash
set nostartofline
set nobackup
set wmnu
let mapleader='`'
nmap <C-L><C-L> :set invrelativenumber<CR>
nmap <leader>l :bnext<CR>
nmap <leader>h :bprevious<CR>
